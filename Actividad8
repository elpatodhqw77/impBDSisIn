mysql> SELECT DISTINCT v.Estado
    ->      FROM (
    ->          SELECT Estado, Id_cliente, DATE_FORMAT(Fecha, '%Y-%m') AS mes,
    ->                AVG(Cantidad) AS promedio_mensual
    ->          FROM Ventas
    ->          GROUP BY Estado, Id_cliente, mes
    ->          HAVING AVG(Cantidad) > 100
    ->      ) v;
