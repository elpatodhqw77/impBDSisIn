mysql> SELECT Proceso, Mensaje, Ocurrencia
    ->      FROM OCURRENCIAS r1
    ->      WHERE Ocurrencia = (
    ->          SELECT MAX(Ocurrencia)
    ->          FROM OCURRENCIAS r2
    ->          WHERE r1.Mensaje = r2.Mensaje
    ->      )
    ->      ORDER BY Mensaje;
